//| Monitorear y gestionar sistema Roll-Off                         |
//+------------------------------------------------------------------+
//+------------------------------------------------------------------+
void GestionarSistemaRollOff()
{
   if(!g_sistema_activo) return;
   
   // Verificar nivel de activación
   if(g_nivel_actual < g_nivel_activacion_cierre)
      return;
   
   // Verificar neutralización
   bool hayNeutralizacion = VerificarNeutralizacion();
   
   if(!g_roll_off_activo && hayNeutralizacion)
   {
      // ACTIVAR Roll-Off por PRIMERA VEZ
      g_roll_off_activo = true;
      g_precio_activacion_roll_off = (SymbolInfoDouble(_Symbol, SYMBOL_BID) + 
                                      SymbolInfoDouble(_Symbol, SYMBOL_ASK)) / 2;
      
      Print("========================================");
      Print(">>> SISTEMA ROLL-OFF ACTIVADO <<<");
      Print(">>> PRIMERA NEUTRALIZACIÓN DETECTADA");
      Print(">>> Nivel: ", g_nivel_actual);
      Print(">>> Precio activación: ", DoubleToString(g_precio_activacion_roll_off, _Digits));
      Print("========================================");
      
      // QUITAR TP/SL DE TODAS LAS POSICIONES (PRIMERA NEUTRALIZACIÓN)
      CPositionInfo posInfo;
      CTrade trade;
      trade.SetExpertMagicNumber(g_numero_magico);
      
      int tpSlQuitados = 0;
      for(int i = 0; i < PositionsTotal(); i++)
      {
         if(posInfo.SelectByIndex(i))
         {
            if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
            {
               ulong ticket = posInfo.Ticket();
               double tp = posInfo.TakeProfit();
               double sl = posInfo.StopLoss();
               
               if(tp != 0 || sl != 0)
               {
                  // Quitar TP y SL
                  if(trade.PositionModify(ticket, 0, 0))
                  {
                     Print("  ✓ TP/SL quitados de posición #", ticket);
                     tpSlQuitados++;
                  }
                  else
                  {
                     Print("  ✗ Error quitando TP/SL #", ticket, ": ", trade.ResultRetcodeDescription());
                  }
               }
            }
         }
      }
      
      Print(">>> TP/SL quitados de ", tpSlQuitados, " posiciones");
      Print(">>> Esperando movimiento de ", g_ticks_umbral_roll_off, " ticks");
      Print("========================================");
      
      return; // Salir y esperar en el próximo tick
   }
   
   if(g_roll_off_activo)
   {
      // Monitorear estado
      MonitorearGanadorasRollOff();
      
      double precioActual = (SymbolInfoDouble(_Symbol, SYMBOL_BID) + 
                            SymbolInfoDouble(_Symbol, SYMBOL_ASK)) / 2;
      
      double punto = SymbolInfoDouble(_Symbol, SYMBOL_POINT);
      double movimiento = precioActual - g_precio_activacion_roll_off;
      int ticksMovidos = (int)MathRound(movimiento / punto);
      
      // Verificar umbral
      bool umbralAlcanzado = (MathAbs(ticksMovidos) >= g_ticks_umbral_roll_off);
      
      // Verificar neutralización activa
      bool neutralizacionActiva = VerificarNeutralizacion();
      
      // Ejecutar Roll-Off si se cumplen las condiciones
      if(umbralAlcanzado && neutralizacionActiva && (TimeCurrent() - g_ultimo_roll_off) > 60)
      {
         Print("========================================");
         Print(">>> UMBRAL ALCANZADO <<<");
         Print(">>> Movimiento: ", MathAbs(ticksMovidos), " ticks");
         Print(">>> Precio: ", DoubleToString(precioActual, _Digits));
         Print(">>> Ejecutando Roll-Off...");
         Print("========================================");
         
         bool exito = EjecutarRollOff();
         
         if(exito)
         {
            // Actualizar precio de referencia
            g_precio_activacion_roll_off = (SymbolInfoDouble(_Symbol, SYMBOL_BID) + 
                                           SymbolInfoDouble(_Symbol, SYMBOL_ASK)) / 2;
            
            Print(">>> Roll-Off completado");
            Print(">>> Nuevo precio referencia: ", DoubleToString(g_precio_activacion_roll_off, _Digits));
         }
      }
      
      // Mostrar estado cada 100 ticks
      static int contadorTicks = 0;
      contadorTicks++;
      if(contadorTicks >= 100)
      {
         Print("Roll-Off activo | Mov: ", ticksMovidos, " ticks | Neutralizado: ", 
               (neutralizacionActiva ? "Sí" : "No"));
         contadorTicks = 0;
      }
   }
}


