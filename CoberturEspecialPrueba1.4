//+------------------------------------------------------------------+
//| Ejecutar Roll-Off: CORRECCIÓN VOLUMEN TOTAL                     |
//| 1. Calcula TP para VOLUMEN TOTAL de ganadoras                   |
//| 2. Coloca UNA orden protección con volumen total                |
//| 3. Usa valores REALES de MT5 (verificación doble)               |
//+------------------------------------------------------------------+
bool EjecutarRollOff()
{
   Print("========== EJECUTANDO ROLL-OFF ==========");
   
   CTrade trade;
   CPositionInfo posInfo;
   trade.SetExpertMagicNumber(g_numero_magico);
   
   // Calcular P&L por tipo
   double plBuy = 0, plSell = 0;
   CalcularPLPorTipo(plBuy, plSell);
   
   Print("P&L BUY: ", DoubleToString(plBuy, 2), " | P&L SELL: ", DoubleToString(plSell, 2));
   
   bool buyGanando = (plBuy > plSell);
   Print("Lado ganador: ", (buyGanando ? "BUY" : "SELL"));
   
   double gananciaEsteCiclo = 0;
   double comisionEsteCiclo = 0;
   int posicionesCerradas = 0;
   
   // PASO 1: Cerrar perdedoras
   Print("--- Cerrando perdedoras ---");
   for(int i = PositionsTotal() - 1; i >= 0; i--)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            string comentario = posInfo.Comment();
            int nivel = 0;
            
            if(StringFind(comentario, "Nivel_") >= 0)
            {
               nivel = (int)StringToInteger(StringSubstr(comentario, 6));
            }
            
            ENUM_ORDER_TYPE tipoReal;
            if(nivel % 2 == 1)
               tipoReal = g_tipo_inicial;
            else
               tipoReal = (g_tipo_inicial == ORDER_TYPE_BUY) ? ORDER_TYPE_SELL : ORDER_TYPE_BUY;
            
            bool esPerdedora = (!buyGanando && tipoReal == ORDER_TYPE_BUY) || 
                              (buyGanando && tipoReal == ORDER_TYPE_SELL);
            
            if(esPerdedora)
            {
               ulong ticket = posInfo.Ticket();
               double volumen = posInfo.Volume();
               
               // Usar valores REALES de MT5
               double profitReal = posInfo.Profit();
               double swapReal = posInfo.Swap();
               double comisionReal = posInfo.Commission();
               
               Print("  Cerrando #", ticket, " Vol:", DoubleToString(volumen, 2),
                     " Profit(MT5):", DoubleToString(profitReal, 2),
                     " Swap(MT5):", DoubleToString(swapReal, 2),
                     " Com(MT5):", DoubleToString(comisionReal, 2));
               
               double comisionCierre = CalcularComisionPepperstone(volumen, _Symbol);
               
               if(trade.PositionClose(ticket))
               {
                  gananciaEsteCiclo += profitReal + swapReal + comisionReal;
                  comisionEsteCiclo += comisionCierre;
                  posicionesCerradas++;
                  Sleep(100);
               }
            }
         }
      }
   }
   
   // Actualizar contabilidad
   g_perdidas_acumuladas_rolloff += gananciaEsteCiclo;
   g_comisiones_acumuladas_rolloff += comisionEsteCiclo;
   g_ciclos_rolloff++;
   
   Print("----------------------------------------------");
   Print("CICLO #", g_ciclos_rolloff);
   Print("  Perdedoras cerradas: ", posicionesCerradas);
   Print("  P&L cerradas (real): ", DoubleToString(gananciaEsteCiclo, 2));
   Print("  Comisiones cierre: ", DoubleToString(comisionEsteCiclo, 2));
   Print("  Saldo acumulado: ", DoubleToString(g_perdidas_acumuladas_rolloff - g_comisiones_acumuladas_rolloff, 2));
   
   double saldoAcumulado = g_perdidas_acumuladas_rolloff - g_comisiones_acumuladas_rolloff;
   double gananciaNecesaria = g_ganancia_objetivo - saldoAcumulado;
   
   Print("==========================================");
   Print(">>> CALCULANDO TP PARA VOLUMEN TOTAL <<<");
   Print("Objetivo: ", DoubleToString(g_ganancia_objetivo, 2));
   Print("Saldo actual: ", DoubleToString(saldoAcumulado, 2));
   Print("Ganancia necesaria: ", DoubleToString(gananciaNecesaria, 2));
   
   // PASO 2: Cancelar órdenes anteriores
   COrderInfo ordInfo;
   for(int i = OrdersTotal() - 1; i >= 0; i--)
   {
      if(ordInfo.SelectByIndex(i))
      {
         if(ordInfo.Magic() == g_numero_magico && ordInfo.Symbol() == _Symbol)
         {
            string com = ordInfo.Comment();
            if(StringFind(com, "RollOff_Proteccion") >= 0)
            {
               trade.OrderDelete(ordInfo.Ticket());
            }
         }
      }
   }
   
   // PASO 3: ANALIZAR TODAS LAS GANADORAS (NO CONFIGURAR AÚN)
   double punto = SymbolInfoDouble(_Symbol, SYMBOL_POINT);
   int digits = (int)SymbolInfoInteger(_Symbol, SYMBOL_DIGITS);
   
   // Variables para acumular información de TODAS las ganadoras
   double volumenTotalGanadoras = 0;
   double plNetoTotalGanadoras = 0;
   double comisionCierreTotalGanadoras = 0;
   ENUM_ORDER_TYPE tipoGanadoras = ORDER_TYPE_BUY; // Se determinará
   int contadorGanadoras = 0;
   
   Print("--- Analizando ganadoras ---");
   
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            string comentario = posInfo.Comment();
            int nivel = 0;
            
            if(StringFind(comentario, "Nivel_") >= 0)
            {
               nivel = (int)StringToInteger(StringSubstr(comentario, 6));
            }
            
            ENUM_ORDER_TYPE tipoReal;
            if(nivel % 2 == 1)
               tipoReal = g_tipo_inicial;
            else
               tipoReal = (g_tipo_inicial == ORDER_TYPE_BUY) ? ORDER_TYPE_SELL : ORDER_TYPE_BUY;
            
            bool esGanadora = (buyGanando && tipoReal == ORDER_TYPE_BUY) || 
                            (!buyGanando && tipoReal == ORDER_TYPE_SELL);
            
            if(esGanadora)
            {
               ulong ticket = posInfo.Ticket();
               double volumen = posInfo.Volume();
               
               // Valores REALES de MT5
               double profitReal = posInfo.Profit();
               double swapReal = posInfo.Swap();
               double comisionReal = posInfo.Commission();
               double plNeto = profitReal + swapReal + comisionReal;
               
               double comisionCierre = CalcularComisionPepperstone(volumen, _Symbol);
               
               Print("  Ganadora #", ticket, " Vol:", DoubleToString(volumen, 2),
                     " Profit(MT5):", DoubleToString(profitReal, 2),
                     " Swap(MT5):", DoubleToString(swapReal, 2),
                     " Com(MT5):", DoubleToString(comisionReal, 2),
                     " P&L neto:", DoubleToString(plNeto, 2));
               
               // ACUMULAR
               volumenTotalGanadoras += volumen;
               plNetoTotalGanadoras += plNeto;
               comisionCierreTotalGanadoras += comisionCierre;
               tipoGanadoras = tipoReal;
               contadorGanadoras++;
            }
         }
      }
   }
   
   Print("----------------------------------------------");
   Print(">>> RESUMEN GANADORAS <<<");
   Print("Cantidad: ", contadorGanadoras);
   Print("Tipo: ", (tipoGanadoras == ORDER_TYPE_BUY ? "BUY" : "SELL"));
   Print("Volumen TOTAL: ", DoubleToString(volumenTotalGanadoras, 2));
   Print("P&L neto TOTAL: ", DoubleToString(plNetoTotalGanadoras, 2));
   Print("Comisiones cierre TOTAL: ", DoubleToString(comisionCierreTotalGanadoras, 2));
   
   if(contadorGanadoras == 0)
   {
      Print("✗ ERROR: No hay ganadoras después del Roll-Off");
      return false;
   }
   
   // CALCULAR TP PARA VOLUMEN TOTAL
   double gananciaAdicional = gananciaNecesaria - plNetoTotalGanadoras + comisionCierreTotalGanadoras;
   
   Print("----------------------------------------------");
   Print(">>> CÁLCULO TP PARA VOLUMEN TOTAL <<<");
   Print("Ganancia adicional: ", DoubleToString(gananciaAdicional, 2));
   
   // Usar volumen TOTAL
   double eurosPorPip = 10.0 * volumenTotalGanadoras;
   double pipsAdicionales = gananciaAdicional / eurosPorPip;
   double puntosAdicionales = pipsAdicionales * 10.0;
   
   Print("EUR por pip (TOTAL): ", DoubleToString(eurosPorPip, 2));
   Print("Pips adicionales: ", DoubleToString(pipsAdicionales, 2));
   Print("Puntos adicionales: ", DoubleToString(puntosAdicionales, 2));
   
   // Obtener precio actual correcto
   double precioActual;
   if(tipoGanadoras == ORDER_TYPE_BUY)
      precioActual = SymbolInfoDouble(_Symbol, SYMBOL_BID);
   else
      precioActual = SymbolInfoDouble(_Symbol, SYMBOL_ASK);
   
   Print("Precio actual (", (tipoGanadoras == ORDER_TYPE_BUY ? "BID" : "ASK"), "): ", 
         DoubleToString(precioActual, digits));
   
   // Calcular TP
   double precioTP;
   if(tipoGanadoras == ORDER_TYPE_BUY)
      precioTP = precioActual + (puntosAdicionales * punto);
   else
      precioTP = precioActual - (puntosAdicionales * punto);
   
   precioTP = NormalizeDouble(precioTP, digits);
   
   double distanciaTicks = MathAbs(precioTP - precioActual) / punto;
   
   Print("TP calculado: ", DoubleToString(precioTP, digits));
   Print("Distancia: ", DoubleToString(distanciaTicks, 1), " ticks (", 
         DoubleToString(distanciaTicks/10, 2), " pips)");
   
   // VERIFICACIÓN
   double movimientoAlTP = distanciaTicks / 10.0;
   double gananciaDelMovimiento = movimientoAlTP * eurosPorPip;
   double plFinalProyectado = plNetoTotalGanadoras + gananciaDelMovimiento - comisionCierreTotalGanadoras;
   double saldoFinalProyectado = saldoAcumulado + plFinalProyectado;
   
   Print("--- VERIFICACIÓN ---");
   Print("Movimiento: ", DoubleToString(movimientoAlTP, 2), " pips");
   Print("Ganancia movimiento: ", DoubleToString(gananciaDelMovimiento, 2));
   Print("P&L final en TP: ", DoubleToString(plFinalProyectado, 2));
   Print("Saldo final: ", DoubleToString(saldoFinalProyectado, 2));
   Print("Objetivo: ", DoubleToString(g_ganancia_objetivo, 2));
   Print("Diferencia: ", DoubleToString(saldoFinalProyectado - g_ganancia_objetivo, 3));
   
   // Validar distancia mínima
   if(distanciaTicks < 5)
   {
      Print("✗ ERROR: TP muy cerca (", distanciaTicks, " ticks)");
      return false;
   }
   
   // PASO 4: CONFIGURAR TP EN TODAS LAS GANADORAS (mismo TP para todas)
   Print("----------------------------------------------");
   Print(">>> CONFIGURANDO TP EN GANADORAS <<<");
   
   int tpsConfigurados = 0;
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            string comentario = posInfo.Comment();
            int nivel = 0;
            
            if(StringFind(comentario, "Nivel_") >= 0)
            {
               nivel = (int)StringToInteger(StringSubstr(comentario, 6));
            }
            
            ENUM_ORDER_TYPE tipoReal;
            if(nivel % 2 == 1)
               tipoReal = g_tipo_inicial;
            else
               tipoReal = (g_tipo_inicial == ORDER_TYPE_BUY) ? ORDER_TYPE_SELL : ORDER_TYPE_BUY;
            
            bool esGanadora = (buyGanando && tipoReal == ORDER_TYPE_BUY) || 
                            (!buyGanando && tipoReal == ORDER_TYPE_SELL);
            
            if(esGanadora)
            {
               ulong ticket = posInfo.Ticket();
               
               if(trade.PositionModify(ticket, 0, precioTP))
               {
                  Print("  ✓ TP configurado #", ticket, " → ", DoubleToString(precioTP, digits));
                  tpsConfigurados++;
               }
               else
               {
                  Print("  ✗ ERROR TP #", ticket, ": ", trade.ResultRetcodeDescription());
               }
            }
         }
      }
   }
   
   Print(">>> TPs configurados: ", tpsConfigurados, " de ", contadorGanadoras);
   
   // PASO 5: COLOCAR UNA ORDEN PROTECCIÓN CON VOLUMEN TOTAL
   Print("----------------------------------------------");
   Print(">>> ORDEN PROTECCIÓN ÚNICA <<<");
   
   double precioOrdenPendiente;
   ENUM_ORDER_TYPE tipoOrdenPendiente;
   
   if(tipoGanadoras == ORDER_TYPE_BUY)
   {
      precioOrdenPendiente = precioActual - (77 * punto);
      tipoOrdenPendiente = ORDER_TYPE_SELL_STOP;
   }
   else
   {
      precioOrdenPendiente = precioActual + (77 * punto);
      tipoOrdenPendiente = ORDER_TYPE_BUY_STOP;
   }
   
   precioOrdenPendiente = NormalizeDouble(precioOrdenPendiente, digits);
   
   Print("Tipo: ", EnumToString(tipoOrdenPendiente));
   Print("Precio: ", DoubleToString(precioOrdenPendiente, digits));
   Print("Volumen TOTAL: ", DoubleToString(volumenTotalGanadoras, 2));
   Print("SL/TP: NINGUNO");
   
   if(trade.OrderOpen(_Symbol, tipoOrdenPendiente, volumenTotalGanadoras, 0, 
                      precioOrdenPendiente, 0, 0, 
                      ORDER_TIME_GTC, 0, 
                      "RollOff_Proteccion_C" + IntegerToString(g_ciclos_rolloff)))
   {
      Print("✓ Orden colocada: #", trade.ResultOrder());
   }
   else
   {
      Print("✗ ERROR orden: ", trade.ResultRetcodeDescription());
   }
   
   Print("==========================================");
   
   g_ultimo_roll_off = TimeCurrent();
   
   return (posicionesCerradas > 0);
}

//+------------------------------------------------------------------+
//| Monitorear ganadoras con TP calculado para VOLUMEN TOTAL        |
//| CRÍTICO: Calcula UN TP para todas, no individualmente           |
//+------------------------------------------------------------------+
void MonitorearGanadorasRollOff()
{
   if(!g_roll_off_activo) return;
   if(!g_sistema_activo) return;
   
   CPositionInfo posInfo;
   CTrade trade;
   trade.SetExpertMagicNumber(g_numero_magico);
   
   // Contar posiciones
   int posicionesAbiertas = 0;
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            posicionesAbiertas++;
         }
      }
   }
   
   // Si no hay posiciones, objetivo alcanzado
   if(posicionesAbiertas == 0)
   {
      Print("========================================");
      Print(">>> TP ALCANZADO - OBJETIVO COMPLETADO <<<");
      Print(">>> Ciclos: ", g_ciclos_rolloff);
      Print(">>> Resultado: ", DoubleToString(g_perdidas_acumuladas_rolloff - g_comisiones_acumuladas_rolloff, 2));
      Print("========================================");
      
      // Cancelar órdenes
      COrderInfo ordInfo;
      for(int i = OrdersTotal() - 1; i >= 0; i--)
      {
         if(ordInfo.SelectByIndex(i))
         {
            if(ordInfo.Magic() == g_numero_magico && ordInfo.Symbol() == _Symbol)
            {
               string com = ordInfo.Comment();
               if(StringFind(com, "RollOff_Proteccion") >= 0)
               {
                  trade.OrderDelete(ordInfo.Ticket());
               }
            }
         }
      }
      
      g_roll_off_activo = false;
      g_sistema_activo = false;
      g_nivel_actual = 0;
      return;
   }
   
   // DETECTAR NEUTRALIZACIÓN
   bool hayNeutralizacion = VerificarNeutralizacion();
   
   static bool neutralizacionAnterior = false;
   
   if(hayNeutralizacion && !neutralizacionAnterior)
   {
      Print("========================================");
      Print(">>> NEUTRALIZACIÓN DETECTADA <<<");
      Print(">>> QUITANDO TP/SL DE TODAS LAS POSICIONES");
      Print("========================================");
      
      // Quitar TP/SL
      int tpSlQuitados = 0;
      for(int i = 0; i < PositionsTotal(); i++)
      {
         if(posInfo.SelectByIndex(i))
         {
            if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
            {
               ulong ticket = posInfo.Ticket();
               double tp = posInfo.TakeProfit();
               double sl = posInfo.StopLoss();
               
               if(tp != 0 || sl != 0)
               {
                  if(trade.PositionModify(ticket, 0, 0))
                  {
                     Print("  ✓ TP/SL quitados #", ticket);
                     tpSlQuitados++;
                  }
               }
            }
         }
      }
      
      Print(">>> TP/SL quitados: ", tpSlQuitados);
      
      // Cancelar órdenes
      COrderInfo ordInfo;
      for(int i = OrdersTotal() - 1; i >= 0; i--)
      {
         if(ordInfo.SelectByIndex(i))
         {
            if(ordInfo.Magic() == g_numero_magico && ordInfo.Symbol() == _Symbol)
            {
               string com = ordInfo.Comment();
               if(StringFind(com, "RollOff_Proteccion") >= 0)
               {
                  trade.OrderDelete(ordInfo.Ticket());
               }
            }
         }
      }
      
      // Actualizar referencia
      g_precio_activacion_roll_off = (SymbolInfoDouble(_Symbol, SYMBOL_BID) + 
                                      SymbolInfoDouble(_Symbol, SYMBOL_ASK)) / 2;
      Print(">>> Nuevo precio referencia: ", DoubleToString(g_precio_activacion_roll_off, _Digits));
      Print("========================================");
   }
   
   neutralizacionAnterior = hayNeutralizacion;
   
   // AJUSTE INSTANTÁNEO DEL TP - CALCULAR PARA VOLUMEN TOTAL
   double punto = SymbolInfoDouble(_Symbol, SYMBOL_POINT);
   int digits = (int)SymbolInfoInteger(_Symbol, SYMBOL_DIGITS);
   
   // PASO 1: Verificar si hay posiciones con TP
   bool hayPosicionesConTP = false;
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            if(posInfo.TakeProfit() != 0)
            {
               hayPosicionesConTP = true;
               break;
            }
         }
      }
   }
   
   if(!hayPosicionesConTP)
   {
      // No hay TPs configurados, no hacer nada
      return;
   }
   
   // PASO 2: ACUMULAR información de TODAS las posiciones ganadoras
   double volumenTotalGanadoras = 0;
   double plNetoTotalGanadoras = 0;
   double comisionCierreTotalGanadoras = 0;
   ENUM_ORDER_TYPE tipoGanadoras = ORDER_TYPE_BUY;
   int contadorGanadoras = 0;
   
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            if(posInfo.TakeProfit() != 0) // Solo las que tienen TP
            {
               string comentario = posInfo.Comment();
               int nivel = 0;
               
               if(StringFind(comentario, "Nivel_") >= 0)
               {
                  nivel = (int)StringToInteger(StringSubstr(comentario, 6));
               }
               
               ENUM_ORDER_TYPE tipoReal;
               if(nivel % 2 == 1)
                  tipoReal = g_tipo_inicial;
               else
                  tipoReal = (g_tipo_inicial == ORDER_TYPE_BUY) ? ORDER_TYPE_SELL : ORDER_TYPE_BUY;
               
               double volumen = posInfo.Volume();
               double profitReal = posInfo.Profit();
               double swapReal = posInfo.Swap();
               double comisionReal = posInfo.Commission();
               double plNeto = profitReal + swapReal + comisionReal;
               double comisionCierre = CalcularComisionPepperstone(volumen, _Symbol);
               
               // ACUMULAR
               volumenTotalGanadoras += volumen;
               plNetoTotalGanadoras += plNeto;
               comisionCierreTotalGanadoras += comisionCierre;
               tipoGanadoras = tipoReal;
               contadorGanadoras++;
            }
         }
      }
   }
   
   if(contadorGanadoras == 0) return;
   
   // PASO 3: CALCULAR TP PARA VOLUMEN TOTAL
   double saldoAcumulado = g_perdidas_acumuladas_rolloff - g_comisiones_acumuladas_rolloff;
   double gananciaNecesaria = g_ganancia_objetivo - saldoAcumulado;
   double gananciaAdicional = gananciaNecesaria - plNetoTotalGanadoras + comisionCierreTotalGanadoras;
   
   // Usar volumen TOTAL
   double eurosPorPip = 10.0 * volumenTotalGanadoras;
   double pipsAdicionales = gananciaAdicional / eurosPorPip;
   double puntosAdicionales = pipsAdicionales * 10.0;
   
   // Obtener precio actual correcto
   double precioActual;
   if(tipoGanadoras == ORDER_TYPE_BUY)
      precioActual = SymbolInfoDouble(_Symbol, SYMBOL_BID);
   else
      precioActual = SymbolInfoDouble(_Symbol, SYMBOL_ASK);
   
   // Calcular NUEVO TP desde precio actual
   double nuevoTP;
   if(tipoGanadoras == ORDER_TYPE_BUY)
      nuevoTP = precioActual + (puntosAdicionales * punto);
   else
      nuevoTP = precioActual - (puntosAdicionales * punto);
   
   nuevoTP = NormalizeDouble(nuevoTP, digits);
   
   // PASO 4: Verificar si necesita ajuste
   // Obtener TP actual de la primera posición
   double tpActual = 0;
   for(int i = 0; i < PositionsTotal(); i++)
   {
      if(posInfo.SelectByIndex(i))
      {
         if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
         {
            if(posInfo.TakeProfit() != 0)
            {
               tpActual = posInfo.TakeProfit();
               break;
            }
         }
      }
   }
   
   double diferenciaTicks = MathAbs(nuevoTP - tpActual) / punto;
   
   static datetime ultimoReporteAjuste = 0;
   
   // PASO 5: AJUSTAR TODOS LOS TPs si hay diferencia >= 1 tick
   if(diferenciaTicks >= 1.0)
   {
      int tpsAjustados = 0;
      
      // Aplicar MISMO TP a TODAS las posiciones
      for(int i = 0; i < PositionsTotal(); i++)
      {
         if(posInfo.SelectByIndex(i))
         {
            if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
            {
               if(posInfo.TakeProfit() != 0)
               {
                  ulong ticket = posInfo.Ticket();
                  
                  if(trade.PositionModify(ticket, 0, nuevoTP))
                  {
                     tpsAjustados++;
                  }
               }
            }
         }
      }
      
      // Reportar cada 5 segundos
      if(tpsAjustados > 0 && (TimeCurrent() - ultimoReporteAjuste > 5))
      {
         int spreadActual = (int)SymbolInfoInteger(_Symbol, SYMBOL_SPREAD);
         Print("--- AJUSTE TP PARA VOLUMEN TOTAL ---");
         Print("Ganadoras: ", contadorGanadoras);
         Print("Volumen TOTAL: ", DoubleToString(volumenTotalGanadoras, 2));
         Print("Tipo: ", (tipoGanadoras == ORDER_TYPE_BUY ? "BUY" : "SELL"));
         Print("Precio actual: ", DoubleToString(precioActual, digits));
         Print("Spread: ", spreadActual, " puntos");
         Print("TP anterior: ", DoubleToString(tpActual, digits));
         Print("TP NUEVO (MISMO PARA TODAS): ", DoubleToString(nuevoTP, digits));
         Print("Diferencia: ", DoubleToString(diferenciaTicks, 1), " ticks");
         Print("Posiciones ajustadas: ", tpsAjustados);
         
         ultimoReporteAjuste = TimeCurrent();
      }
   }
   
   // Reportar estado cada 10 segundos
   static datetime ultimoReporte = 0;
   if(TimeCurrent() - ultimoReporte > 10)
   {
      double plTotal = 0;
      for(int i = 0; i < PositionsTotal(); i++)
      {
         if(posInfo.SelectByIndex(i))
         {
            if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
            {
               plTotal += posInfo.Profit() + posInfo.Swap() + posInfo.Commission();
            }
         }
      }
      
      int spreadActual = (int)SymbolInfoInteger(_Symbol, SYMBOL_SPREAD);
      
      Print("--- Roll-Off Ciclo #", g_ciclos_rolloff, " ---");
      Print("P&L actual: ", DoubleToString(plTotal, 2));
      Print("Saldo: ", DoubleToString(saldoAcumulado, 2));
      Print("Posiciones: ", posicionesAbiertas);
      Print("Spread: ", spreadActual, " puntos");
      
      // Verificar que todos tienen el mismo TP
      double primerTP = 0;
      bool todosIguales = true;
      for(int i = 0; i < PositionsTotal(); i++)
      {
         if(posInfo.SelectByIndex(i))
         {
            if(posInfo.Magic() == g_numero_magico && posInfo.Symbol() == _Symbol)
            {
               double tp = posInfo.TakeProfit();
               if(tp != 0)
               {
                  if(primerTP == 0)
                     primerTP = tp;
                  else if(MathAbs(tp - primerTP) > punto)
                     todosIguales = false;
               }
            }
         }
      }
      
      if(todosIguales)
         Print("✓ Todos los TPs iguales: ", DoubleToString(primerTP, digits));
      else
         Print("✗ ADVERTENCIA: TPs diferentes entre posiciones");
      
      ultimoReporte = TimeCurrent();
   }
}

